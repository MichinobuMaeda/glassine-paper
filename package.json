{
  "name": "glassine-paper",
  "version": "1.0.1",
  "description": "CSS and some React components for Material Design 3",
  "type": "module",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichinobuMaeda/glassine-paper.git"
  },
  "bugs": {
    "url": "https://github.com/MichinobuMaeda/glassine-paper/issues"
  },
  "homepage": "https://github.com/MichinobuMaeda/glassine-paper#readme",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./css": "./lib/glassine-paper.min.css",
    "./Button": {
      "import": "./lib/Button.js",
      "types": "./lib/Button.d.ts"
    },
    "./Slider": {
      "import": "./lib/Slider.js",
      "types": "./lib/Slider.d.ts"
    },
    "./TextField": {
      "import": "./lib/TextField.js",
      "types": "./lib/TextField.d.ts"
    }
  },
  "files": [
    "lib/glassine-paper.min.css",
    "lib"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "scripts": {
    "build:sample": "sass scss/index.scss docs/sample/glassine-paper.css",
    "build:compressed": "sass scss/index.scss lib/glassine-paper.min.css --style compressed",
    "build:components": "tsc -p tsconfig.components.json",
    "build:ui": "tsc -b && vite build && sed -e 's/\\/assets\\//.\\/assets\\//g' -i docs/theme/index.html",
    "build": "npm-run-all --parallel build:sample build:compressed build:components build:ui",
    "watch:sample": "sass --watch scss/index.scss:docs/sample/glassine-paper.css",
    "watch:compressed": "sass --watch scss/index.scss:lib/glassine-paper.min.css --style compressed",
    "watch": "npm-run-all --parallel watch:sample watch:compressed",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:static": "npx http-server docs -o sample -a localhost -p 8000",
    "dev": "vite",
    "start": "npm-run-all --parallel watch:sample watch:compressed dev:static"
  },
  "author": "Michinobu Maeda",
  "license": "MIT",
  "dependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@material/material-color-utilities": "^0.3.0",
    "@smakss/react-scroll-direction": "^4.2.0",
    "@types/jsdoc-to-markdown": "^7.0.6",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-react": "^5.0.4",
    "color-convert": "^3.1.2",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "jsdoc-to-markdown": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "sass": "^1.69.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.9",
    "vite-plugin-pwa": "^1.1.0",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "overrides": {
    "sharp": "^0.33.5",
    "sharp-ico": "^0.1.5"
  }
}
